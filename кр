#include <iostream>

void random(int* arr, int size) {
    for (int i = 0; i < size; i++) {
        arr[i] = rand() % 50 + 1; 
    }
}

void displayArr(int* arr, int size) {
    for (int i = 0; i < size; i++) {
        std::cout << arr[i] << " ";
    }
    std::cout << std::endl;
}

void couples(int* arr, int size, int sum) {
    std::cout << "Пары с суммой " << sum << ":" << std::endl;
    for (int i = 0; i < size - 1; i++) {
        for (int j = i + 1; j < size; j++) {
            if (arr[i] + arr[j] == sum) {
                std::cout << arr[i] << " + " << arr[j] << " = " << sum << std::endl;
            }
        }
    }
}

int main() {
    int size;
    std::cout << "Введите размер массива: ";
    std::cin >> size;

    int* array = new int[size];

  
    srand(static_cast<unsigned int>(time(0)));
    random(array, size);

    std::cout << "Элементы массива:" << std::endl;
    displayArr(array, size);

    int Sum;
    std::cout << "Введите желаемую сумму: ";
    std::cin >> Sum;

   
    couples(array, size, Sum);

    delete[] array;

    return 0;
}
